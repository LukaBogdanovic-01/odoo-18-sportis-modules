<odoo>

    <!-- TREE and FORM for Origin Agent -->
    <record id="view_tree_origin_agent" model="ir.ui.view">
        <field name="name">pota.origin.agent.list</field>
        <field name="model">pota.origin.agent</field>
        <field name="arch" type="xml">
            <list>
                <field name="name"/>
            </list>
        </field>
    </record>

    <record id="view_form_origin_agent" model="ir.ui.view">
        <field name="name">pota.origin.agent.form</field>
        <field name="model">pota.origin.agent</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="name"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_origin_agent" model="ir.actions.act_window">
        <field name="name">Origin Agent</field>
        <field name="res_model">pota.origin.agent</field>
        <field name="view_mode">list,form</field>
    </record>


    <!-- TREE and FORM for Player Positions -->
    <record id="view_tree_pota_position" model="ir.ui.view">
        <field name="name">pota.position.list</field>
        <field name="model">pota.position</field>
        <field name="arch" type="xml">
            <list>
                <field name="name"/>
            </list>
        </field>
    </record>

    <record id="view_form_pota_position" model="ir.ui.view">
        <field name="name">pota.position.form</field>
        <field name="model">pota.position</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="name"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_pota_positions" model="ir.actions.act_window">
        <field name="name">Player Positions</field>
        <field name="res_model">pota.position</field>
        <field name="view_mode">list,form</field>
    </record>

    <!-- TREE AND FORM FOR STAGES -->
    <record id="view_my_model_stage_tree" model="ir.ui.view">
        <field name="name">pota.kanban.stage.list</field>
        <field name="model">pota.kanban.stage</field>
        <field name="arch" type="xml">
            <list>
                <field name="sequence"/>
                <field name="name"/>
                <field name="fold"/>
                <field name="active"/>
            </list>
        </field>
    </record>

    <record id="view_my_model_stage_form" model="ir.ui.view">
        <field name="name">pota.kanban.stage.form</field>
        <field name="model">pota.kanban.stage</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="sequence"/>
                        <field name="fold"/>
                        <field name="active"/>
                        <field name="is_won" invisible="not is_last_stage"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_pota_kanban_stage" model="ir.actions.act_window">
        <field name="name">Stages</field>
        <field name="res_model">pota.kanban.stage</field>
        <field name="view_mode">list,form</field>
    </record>
</odoo>