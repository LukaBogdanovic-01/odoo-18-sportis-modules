<odoo>
    <record id="view_crm_lead_form_sportis" model="ir.ui.view">
    <field name="name">crm.lead.form.sportis</field>
    <field name="model">crm.lead</field>
    <field name="inherit_id" ref="crm.crm_lead_view_form"/>
    <field name="arch" type="xml">

        <!-- Revenue blok (ostaje tvoj jednostavniji) -->
        <xpath expr="//div[hasclass('d-flex','flex-wrap','align-items-baseline')]" position="replace">
            <div class="d-flex flex-wrap align-items-baseline">
                <field name="company_currency" invisible="1"/>
                <field name="expected_revenue" class="o_input_13ch" widget="monetary"
                       options="{'currency_field': 'company_currency'}"/>
                <field name="recurring_plan" class="oe_inline o_input_13ch"
                       placeholder="e.g. Monthly"
                       options="{'no_create': True, 'no_open': True}"/>
            </div>
        </xpath>

        <!-- Contact info prilagodbe -->
        <xpath expr="//group[@name='opportunity_partner']//field[@name='phone']" position="replace">
            <field name="phone" string="Primary Phone" widget="phone"/>
        </xpath>

        <xpath expr="//field[@name='probability']" position="attributes">
            <attribute name="invisible">1</attribute>
        </xpath>
        <xpath expr="//div[@id='probability']/span" position="replace"/>
        <xpath expr="//button[@name='action_set_automated_probability']" position="replace"/>
        <xpath expr="//field[@name='automated_probability']" position="replace"/>

        <xpath expr="//field[@name='lead_properties']" position="attributes">
            <attribute name="invisible">1</attribute>
        </xpath>

        <xpath expr="//group[@name='opportunity_partner']//field[@name='partner_id']" position="before">
            <separator string="INFORMATION"/>
            <field name="x_company_name"/>
        </xpath>
        <xpath expr="//group[@name='opportunity_partner']//field[@name='partner_id']" position="after">
            <field name="x_contact_name"/>
        </xpath>
        <xpath expr="//group[@name='opportunity_partner']//div[hasclass('o_row','o_row_readonly')][.//field[@name='phone']]" position="after">
            <field name="x_mobile_from_contact"/>
        </xpath>

        <!-- Sakrij svuda user_id gdje se pojavi u main formu -->
        <!-- <xpath expr="//field[@name='user_id']" position="replace"/> -->

        <!-- ***** DESNA KOLONA (opportunity strana) ***** -->
        <!-- 1) Ubaci prilagoÄ‘ena polja iznad 'Expected Closing' labela -->
        <xpath expr="//label[@for='date_deadline']" position="before">
            <field name="x_player_position"/>
            <field name="x_player_nationality"/>
            <field name="x_country_request"/>
            <field name="x_priority"/>
        </xpath>

        <!-- 2) Dodaj upload odmah poslije onog tag_ids koji ide uz Expected Closing -->
        <xpath expr="//label[@for='date_deadline']/following::field[@name='tag_ids'][1]" position="after">
            <field name="x_file" filename="name"/>
        </xpath>

        <!-- TAB: Extra Information (tvoja verzija) -->
        <xpath expr="//page[@name='lead']" position="replace">
            <page name="extra_info" string="Extra Information">
                <group>
                    <group>
                        <separator string=" "/>
                        <field name="other_contact"/>
                        <field name="function" string="Job Position"/>
                        <field name="mobile"/>
                        <field name="website"/>
                        <field name="description" string="Notes about contact"/>
                    </group>
                    <group>
                        <separator string="Tracking"/>
                        <field name="create_uid" string="Created by"/>
                        <field name="create_date" string="Created on"/>
                        <field name="user_id" string="Salesperson"/>
                        <field name="team_id" string="Sales Team"/>
                        <field name="day_open"/>
                        <field name="date_closed" string="Days to Close"/>
                    </group>
                </group>
            </page>
        </xpath>

    </field>
</record>


    <record id="crm_lead_quick_create_form_inherit_sportis" model="ir.ui.view">
        <field name="name">crm.lead.form.quick.create.inherit.sportis</field>
        <field name="model">crm.lead</field>
        <field name="inherit_id" ref="crm.quick_create_opportunity_form"/> <!-- iz slike -->
        <field name="arch" type="xml">

            <!-- 1. Promeni placeholder za polje name -->
            <xpath expr="//field[@name='name']" position="attributes">
            <attribute name="placeholder">Essential Elements</attribute>
            </xpath>

            <!-- 2. Ukloni priority iz gornje grupe pored expected_revenue -->
            <xpath expr="//div[hasclass('o_row')]/field[@name='priority']" position="replace"/>

             <!-- 3. Ubaci recurring_plan pored expected_revenue -->
            <xpath expr="//div[hasclass('o_row')]/field[@name='expected_revenue']" position="after">
                <field name="recurring_plan" class="oe_inline" placeholder="e.g. Monthly"/>
            </xpath>

            <!-- 4. Dodaj priority ispod reda -->
            <xpath expr="//div[hasclass('o_row')]" position="after">
                <div>
                    <field name="priority" widget="priority" class="oe_inline" nolabel="1"/>
                </div>
            </xpath>

        </field>
    </record>


    <record id="view_crm_lead_kanban_inherit_sportis" model="ir.ui.view">
        <field name="name">crm.lead.kanban.inherit.sportis</field>
        <field name="model">crm.lead</field>
        <field name="inherit_id" ref="crm.crm_case_kanban_view_leads"/>
        <field name="arch" type="xml">
            <xpath expr="//t[@t-name='card']" position="replace">
                <t t-name="card">
                    <t t-set="lost_ribbon" t-value="!record.active.raw_value and record.probability and record.probability.raw_value == 0"/>
                    <widget name="web_ribbon" title="lost" bg_color="text-bg-danger" invisible="probability &gt; 0 or active"/>
                    <div class="oe_kanban_global_click oe_kanban_card">
                        <div class="o_kanban_record_title mb-1">
                            <strong><field name="name"/></strong>
                        </div>
                        <div><field name="x_contact_name"/></div>
                        <div><field name="x_player_position"/></div> 
                        <div><field name="x_country_request"/></div> 
                        <div><field name="expected_revenue" widget="monetary" options="{'currency_field': 'company_currency'}"/></div>
                        <div><field name="tag_ids" widget="many2many_tags" options="{'color_field': 'color'}"/></div>
                        <div><field name="phone" widget="phone"/></div>
                        <div><field name="x_company_name"/></div>
                        <!-- Donji dio kartice -->
                        <footer class="pt-1">
                            <div class="d-flex mt-auto align-items-center">
                                <field name="priority" widget="priority" groups="base.group_user" class="me-2"/>
                                <field name="activity_ids" widget="kanban_activity"/>
                                <field name="user_id" widget="many2one_avatar_user" domain="[('share', '=', False)]" class="ms-auto"/>
                            </div>
                        </footer>
                    </div>
                </t>
            </xpath>
        </field>
    </record>


    <!-- Akcija za export -->
    <record id="action_export_crm_leads" model="ir.actions.server">
        <field name="name">Export</field>
        <field name="model_id" ref="crm.model_crm_lead"/>
        <field name="binding_model_id" ref="crm.model_crm_lead"/>
        <field name="binding_type">action</field>
        <field name="binding_view_types">form</field>
        <field name="state">code</field>
        <field name="code">
            action = env['crm.lead'].sudo().export_records()
        </field>
    </record>


</odoo>
